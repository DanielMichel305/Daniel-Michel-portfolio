{
  "scripts": {
    
    "serve": "node ./dist/app.js",
    "serve-prod": "sudo systemctl restart DMSPortfolio.service && sudo systemctl status DMSPortfolio.service",
    "build:server": "npm --prefix src/server run build",
    "build:client": "npm --prefix src/client run build",
    "build-prod": "npm install && npx tsc && cp -a ./src/Views/. ./dist/Views/",
    "dev:client" : "npm --prefix src/client run dev",
    "dev:server" : "npm --prefix src/server run dev",
    "dev": "concurrently \"npm:dev:*\" ",
    "build" : "npm run build:server && npm run build:client",
    "start": "node ./dist/server/app.js"

  },
  "devDependencies": {
     "concurrently": "^8.0.0"
  },
  "workspaces" : ["src/server", "src/client"]
}
